Public Class Detail

    Private Sub btnClose_Click(sender As Object, e As EventArgs) Handles btnClose.Click

        Me.Close()

    End Sub

    Private Sub btnBars_Click(sender As Object, e As EventArgs) Handles btnBars.Click
        Me.Hide()
        Bars.Show()


    End Sub

    Private Sub btnRest_Click(sender As Object, e As EventArgs) Handles btnRest.Click
        Me.Hide()
        Restuarants.Show()

    End Sub

    Private Sub LinkLabel1_LinkClicked(sender As Object, e As LinkLabelLinkClickedEventArgs) Handles LinkLabel1.LinkClicked

        If lblBarName.Text = "Five1Eight" Then
            System.Diagnostics.Process.Start("https://www.facebook.com/Five1Eight/")

        ElseIf lblBarName.Text = "Green Room" Then
            System.Diagnostics.Process.Start("https://www.facebook.com/greenroomplattsburgh/?fref=ts")

        ElseIf lblBarName.Text = "Monopole" Then
            System.Diagnostics.Process.Start("http://monopolebar.com/")

        ElseIf lblBarName.Text = "Peabody's Bar" Then
            System.Diagnostics.Process.Start("https://www.facebook.com/peabodys.bar/")

        End If


    End Sub
End Class

